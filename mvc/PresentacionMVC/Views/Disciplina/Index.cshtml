@model IEnumerable<DTO.ListadoDisciplinasDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Disciplinas</h1>
@if (TempData["Error"] != null)
{
    <div class="alert alert-primary">
        @TempData["Error"]
    </div>
}
<p>
    <a asp-action="Create">Crear Disciplina</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>Atletas</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Anio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Codigo)
                    </td>
                    <td>
                        @string.Join(", ", item.Atletas)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new {  id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td> 
                </tr>
            }
}
    </tbody>
</table>
