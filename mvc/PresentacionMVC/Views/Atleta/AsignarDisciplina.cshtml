@model PresentacionMVC.Models.AsignarDisciplinaViewModel

@{
    ViewData["Title"] = "AsignarDisciplina";
}

<h1>Asignar disciplina</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AsignarDisciplina">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="dto.dtoAtleta.Id" />

            <div class="form-group">
                <label asp-for="dto.dtoAtleta.Nombre" class="control-label"></label>
                <input asp-for="dto.dtoAtleta.Nombre" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="dto.dtoAtleta.Apellido" class="control-label"></label>
                <input asp-for="dto.dtoAtleta.Apellido" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="dto.dtoAtleta.Pais" class="control-label"></label>
                <input asp-for="dto.dtoAtleta.Pais" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="dto.dtoAtleta.Sexo" class="control-label"></label>
                <input asp-for="dto.dtoAtleta.Sexo" class="form-control" readonly />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="dto.dtoAtleta.Disciplinas" />
            </div>

            @if (!string.IsNullOrEmpty(Model.dto.dtoAtleta.DisciplinasComaSeparadas))
            {
                <div class="form-group">
                    <label asp-for="dto.dtoAtleta.DisciplinasComaSeparadas" class="control-label"></label>
                    <input asp-for="dto.dtoAtleta.DisciplinasComaSeparadas" class="form-control" readonly />
                </div>
            }
            else
            {
                <div class="form-group">
                    <input type="hidden" asp-for="dto.dtoAtleta.DisciplinasComaSeparadas" />
                </div>
            }


            <div class="form-group">
                <label asp-for="dto.IdDisciplina" class="control-label"></label>
                <select asp-for="dto.IdDisciplina" class="form-control">
                    @foreach (var item in Model.ListadoDisciplinasDTO)
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Asignar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al Listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}